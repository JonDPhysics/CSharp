@model LoginRegister.Models.LoginUser;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>A Web Page</title>
</head>
<body>
    <div id="container">
        <div id="navBar">
            <h1>Login to this Cool Site!</h1>
            <a href="/">Register</a>
        </div>
        <div class="col">
            <div class="row">
                <span asp-for="email"></span>
                <label asp-for="email"></label>
                <input asp-for="email">
            </div>
            <div class="row">
                <span asp-for="pw"></span>
                <label asp-for="pw"></label>
                <input asp-for="pw">
            </div>
            <input type="submit" value="Sign up Now">
        </div>
    </div>
</body>
</html>