@using ProdCate.Models;
@model Prod;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>A Web Page</title>
</head>
<body>
    <div id="container">
        <h1>@Model.ProdName</h1>
        <div class="col">
            <h2>Categories:</h2>
        @foreach (Cate cate in Model.AllCats)
        {
            <h3>@cate.CateName</h3>
        }
        </div>
        <div class="col">
            <form asp-action="AddCate">
            </form>
        </div>
    </div>
</body>
</html>