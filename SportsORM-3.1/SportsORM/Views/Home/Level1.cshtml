            }
            <li>...all teams whose names begin with "T"</li>
            @foreach (var t in VeiwBag.StartWithT)
            {
                <ul>@t.Name</ul>
            }
            <li>...all teams, ordered alphabetically by location</li>
            @foreach (var t in viewBag.AllTeamsLocation)
            {
                <ul>@t.TeamName</ul>
            }
            <li>...all teams, ordered by team name in reverse alphabetical order</li>
            @foreach (var t in ViewBag.AllTeamsName)
            {
                <ul>t.TeamName</ul>
            }
            <li>...every player with last name "Cooper"</li>
            @foreach (var p in ViewBag.LNameCooper)
            {
                <ul>@p.FirstName</ul>
            }
            <li>...every player with first name "Joshua"</li>
            @foreach (var p in ViewBag.FNameJoshua)
            {
                <ul>@p.FirstName</ul>
            }
            <li>...every player with last name "Cooper" EXCEPT those with "Joshua" as the first name</li>
            @foreach (var p in ViewBag.CooperNotJoshua)
            {
                <ul>@p.FirstName</ul>
            }
            <li>...all players with first name "Alexander" OR first name "Wyatt"</li>
            @foreach (var p in ViewBag.AlexanderOrWyatt)
            {
                <ul>@p.FirstName</ul>
            }
        </ol>
    </div>
</div>