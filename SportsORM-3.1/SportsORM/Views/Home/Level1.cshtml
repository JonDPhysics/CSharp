    <div class="card-body">
        <p>Using the SportsORM, complete all the following queries and show their results on Level1.cshtml.</p>
        <ol>
            <li>All Women's Leagues</li>
            @foreach (var l in ViewBag.WomensLeagues)
            {
                <ul>@l.Name</ul>
            }
            <li>All Hockey Leagues</li>
            @foreach (var l in ViewBag.HockeyLeagues)
            {
                <ul>@l.Name</ul>
            }
            <li>Not A Football League</li>
            @foreach (var l in ViewBag.NotFootballLeagues)
            {
                <ul>@l.Name</ul>
            }
            <li>All Conferences</li>
            @foreach (var l in ViewBag.Conferences)
            {
                <ul>@l.Name</ul>
            }
            <li>All in Atlantic Region</li>
            @foreach (var l in ViewBag.AtlanticLeagues)
            {
                <ul>@l.Name</ul>
            }
            <li>All Dallas Teams</li>
            @foreach (var t in ViewBag.DallasTeams)
            {
                <ul>@t.TeamName</ul>
            }
            <li>Raptors</li>
            @foreach (var t in ViewBag.Raptors)
            {
                <ul>@t.Name</ul>
            }
            <li>...all teams whose location includes "City"</li>
            @foreach (var l in ViewBag.CityLocation)
